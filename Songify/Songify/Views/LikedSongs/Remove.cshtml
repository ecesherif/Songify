@using Songify.Models.LikedSongsModels
@model LikedSongRemoveViewModel
@{
    ViewData["Title"] = "Remove Liked Song";
}
<h1>Remove Liked Song</h1>
<div>
    <h4>Are you sure you want to remove "@Model.SongTitle"?</h4>
</div>
<form asp-controller="LikedSongs" asp-action="RemoveConfirmed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="songId" value="@Model.SongId" />
    <button type="submit" class="btn btn-danger">Remove</button>
    <a asp-action="All" class="btn btn-secondary">Cancel</a>
</form>
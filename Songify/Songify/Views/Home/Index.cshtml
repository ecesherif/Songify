@{
    ViewData["Title"] = "Home Page";
}

@if (!this.User.Identity.IsAuthenticated)
{
    <div class="songify">
        <h1>Songify: Songs and Albums</h1>
        <hr class="hr-2 bg-dark" />
        <h3 class="mt-4"><a href="/Identity/Account/Login">Login</a> to see songs and albums.</h3>
        <h3 class="mt-4"><a href="/Identity/Account/Register">Register</a> if you don't have an account.</h3>
    </div>
}
else
{
    <div class="songify">
        <h1 class="text-center">Welcome, @this.User.Identity.Name</h1>
        <hr class="hr-2 bg-secondary" />
        <h3 class="mt-4">View <a href="/Songs/All">all songs</a>.</h3>
        <h3 class="mt-4">View <a href="/Bands/All">all bands</a>.</h3>
    </div>
}
